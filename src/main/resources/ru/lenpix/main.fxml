<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="435.0" prefWidth="660.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.lenpix.MainForm">
    <MenuBar fx:id="menu">
        <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" onAction="#openFilesButtonHandler" text="Load images" />
        </Menu>
        <Menu mnemonicParsing="false" text="Edit">
            <MenuItem mnemonicParsing="false" onAction="#changeImageOnCanvasButtonHandler" text="Change image" />
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <MenuItem mnemonicParsing="false" text="About" />
        </Menu>
    </MenuBar>
    <ScrollPane hbarPolicy="ALWAYS" layoutY="29.0" prefWidth="280.0" vbarPolicy="ALWAYS" VBox.vgrow="ALWAYS">
        <Canvas fx:id="canvas" onMouseClicked="#handleSaveCoordinates" onMouseExited="#handleExitedCanvasCoordinates" onMouseMoved="#handleCoordinatesInfo" />
    </ScrollPane>
   <Label fx:id="coordinatesInfo" />
</VBox>
